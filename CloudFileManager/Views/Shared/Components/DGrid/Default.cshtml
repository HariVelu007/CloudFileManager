@model List<CFMDomainModel.UserFile>
@{
    <table class="table" >
        <thead>
            <tr>

                <td style="width:30%">File Name</td>
                <td style="width:10%">Size</td>
                <td style="width:10%">Extension</td>
                <td style="width:20%">Reuqested By</td>
                <td style="width:30%;text-align:right">Action</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>

                    <td>@item.FileName</td>
                    <td>@item.FileSize</td>
                    <td>@item.FileExtension</td>
                    <td>@item.UserID</td>
                    <td style="text-align:right" >
                        <button class="btn btn-success"><i class="bi bi-check-lg"></i></button>
                        <button class="btn btn-danger"><i class="bi bi-x-lg"></i></button>
                    </td>
                </tr>
            }

        </tbody>
    </table>
}
